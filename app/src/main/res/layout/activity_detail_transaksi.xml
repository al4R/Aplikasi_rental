<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailTransaksiActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:textColor="@color/ColorBlack"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Transaksi"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorGrey"/>
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="100dp">
            <ImageView
                android:id="@+id/bukti_byr"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_content_copy_24"
                android:layout_width="150dp"
                android:layout_height="100dp"/>
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_add_24"/>
        </RelativeLayout>
        <Button
            android:layout_gravity="center"
            android:id="@+id/btn_upload_bukti"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:text="upload bukti"
            />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorGrey"/>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="13dp"
                android:textColor="@color/ColorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kode transaksi : "/>
            <TextView
                android:id="@+id/kode_trn"
                android:textSize="13dp"
                android:textColor="@color/bg_btn_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KD/TRN-210613/594"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dp"
                android:textSize="13dp"
                android:textColor="@color/ColorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dipesan tanggal : "/>
            <TextView
                android:id="@+id/tgl_pesan"
                android:layout_marginTop="5dp"
                android:textSize="13dp"
                android:textColor="@color/bg_btn_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal 2021-06-13 16:47:07"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="13dp"
                android:textColor="@color/ColorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dipesan Oleh : "/>
            <TextView
                android:id="@+id/nama_pemesan"
                android:textSize="13dp"
                android:textColor="@color/bg_btn_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anisa Putri"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorGrey"/>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textSize="13dp"
                android:textColor="@color/ColorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mulai sewa tanggal : "/>
            <TextView
                android:id="@+id/tgl_sewa"
                android:textSize="13dp"
                android:textColor="@color/bg_btn_color"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal 16 juni 2021 waktu 12.28 WIB"/>
            <TextView
                android:layout_marginTop="10dp"
                android:textSize="13dp"
                android:textColor="@color/ColorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akhir sewa tanggal : "/>
            <TextView
                android:id="@+id/tgl_kembali"
                android:textSize="13dp"
                android:textColor="@color/bg_btn_color"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal 17 juni 2021 waktu 12.28 WIB"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="13dp"
                    android:textColor="@color/ColorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Durasi sewa : "
                    />
                <TextView
                    android:id="@+id/tv_durasi"
                    android:textSize="13dp"
                    android:textColor="@color/bg_btn_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24 Jam"
                    />
                <TextView
                    android:layout_marginLeft="40dp"
                    android:textSize="13dp"
                    android:textColor="@color/ColorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total bayar: "
                    />
                <TextView
                    android:id="@+id/totalByr"
                    android:textSize="13dp"
                    android:textColor="@color/bg_btn_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. 300000"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorGrey"/>
        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/btn_batalT"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/ColorRed"
            android:text="Batal"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/loading_det_trans"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
</RelativeLayout>