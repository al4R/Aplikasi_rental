<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.RiwayatFragment">
    <LinearLayout
        android:id="@+id/ll"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/bg_btn_color"
        android:layout_width="match_parent"
        android:layout_height="57dp">
        <TextView
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="@color/colorWhite"
            android:text="Akun"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_baseline_person_24"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#4A505050"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:id="@+id/list_nama"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.button.MaterialButton
            app:strokeWidth="2dp"
            app:strokeColor="@color/bg_btn_color"
            android:textAllCaps="false"
            android:id="@+id/btn_dft"
            android:text="Daftar"
            android:textColor="@color/bg_btn_color"
            android:backgroundTint="#00FF0000"
            android:layout_marginTop="80dp"
            android:layout_width="120dp"
            android:layout_height="50dp"/>
        <com.google.android.material.button.MaterialButton
            android:textAllCaps="false"
            android:id="@+id/btn_msk"
            android:text="Masuk"
            android:backgroundTint="@color/bg_btn_color"
            android:layout_marginTop="10dp"
            android:layout_width="120dp"
            android:layout_height="50dp"/>
    </LinearLayout>
</LinearLayout>