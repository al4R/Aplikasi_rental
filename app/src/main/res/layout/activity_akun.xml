<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AkunActivity">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hallo selamat datang "
            android:textSize="23dp"
            android:textColor="@color/ColorBlack"
            android:textStyle="bold"
            />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/splashblue"
            />

        <TextView
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Silahkan daftar terlebih dahulu "
            android:textSize="20dp"
            android:textColor="@color/ColorBlack"
            android:textStyle="bold"
            />
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="12dp"
            android:layout_marginTop="15dp"
            android:layout_width="160dp"
            android:layout_height="50dp">
            <Button
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btn_user_masuk"
                android:background="@color/bg_btn_color"
                android:text="Masuk"
                android:textColor="@color/colorWhite"
                android:textSize="19dp"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="12dp"
            android:layout_marginTop="15dp"
            android:layout_width="160dp"
            android:layout_height="50dp">
            <Button
                android:textAllCaps="false"
                android:id="@+id/btn_user_daftar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/ColorRed"
                android:text="Daftar"
                android:textColor="@color/colorWhite"
                android:textSize="19dp"
                />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>